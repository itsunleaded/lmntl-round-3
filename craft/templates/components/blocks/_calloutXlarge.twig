{% if block.type == 'calloutXlarge' %}
<div class="{{ block.rowClasses | default('row justify-content-center') }}">
    <div class="{{ block.columnClasses | default('col-11 col-md-9 py-4') }}">
        <div class="callout__xlarge">
            {{  block.calloutContent }}
        </div>
    </div>
</div>
{% endif %}